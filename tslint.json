{
  "defaultSeverity": "warning",
  "compilerOptions": {
    "noImplicitAny": false
  },
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "src/components/utils/XInput.vue"
    ]
  },
  "rules": {
    "indent": [
      true,
      "spaces",
      4
    ],
    "interface-name": false,
    "no-consecutive-blank-lines": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "semicolon": false,
    "trailing-comma": false,
    "no-debugger": false,
    "no-console": false,
    "variable-name": false,
    "curly": false,
    "member-access": false,
    "max-line-length": false,
    "ban-types": false,
    "quotemark": [
      true,
      "single"
    ]
  }
}